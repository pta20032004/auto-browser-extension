{
  "manifest_version": 3,
  "name": "Web Automation Suite (Sidebar UI)",
  "version": "4.0",
  "description": "Chạy tự động hóa trực tiếp trên từng tab.",
  "permissions": [
    "storage",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_title": "Mở/Đóng Automation Sidebar"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "css": ["css/sidebar.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["ui/sidebar.html"],
      "matches": ["<all_urls>"]
    }
  ]
}