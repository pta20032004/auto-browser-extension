{
  "manifest_version": 3,
  "name": "Web Automation Suite",
  "version": "1",
  "description": "Advanced automation tool with Playwright export, enhanced cookie management, viewport info, and clipboard support",
  "permissions": [
    "storage",
    "notifications",
    "scripting",
    "activeTab",
    "cookies",
    "clipboardRead",
    "clipboardWrite"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_title": "Open Automation Sidebar",
    "default_popup": ""
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/content.js"],
      "css": ["css/sidebar.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "ui/sidebar.html",
        "css/style.css",
        "js/indexeddb-helper.js",
        "js/autoclicker.js",
        "js/script-builder.js",
        "js/file-manager.js",
        "js/cookie-manager.js",
        "js/slidebar.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "author": "Web Automation Suite Team",
  "homepage_url": "https://github.com/",
  "minimum_chrome_version": "88"
}