{
  "manifest_version": 3,
  "name": "Web Automation Suite",
  "version": "4.0",
  "description": "Automation tool with sidebar interface",
  "permissions": [
    "storage",
    "notifications",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_title": "Open Automation Sidebar"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/content.js"],
      "css": ["css/sidebar.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "ui/sidebar.html",
        "css/style.css",
        "js/indexeddb-helper.js",
        "js/autoclicker.js",
        "js/script-builder.js",
        "js/file-manager.js",
        "js/slidebar.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}